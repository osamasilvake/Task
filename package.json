{
	"name": "robot-gui",
	"private": true,
	"version": "0.3.0",
	"type": "module",
	"scripts": {
		"start": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"test": "vitest",
		"test:ci": "CI=true vitest",
		"pretty:check": "prettier --check ./**/*.{js,jsx,ts,tsx,json}",
		"pretty:apply": "prettier --write ./**/*.{js,jsx,ts,tsx,json}",
		"lint:es": "npx eslint ./**/*.{js,jsx,ts,tsx} --quiet",
		"lint:es:fix": "npx eslint ./**/*.{js,jsx,ts,tsx} --fix",
		"scan:all": "yarn pretty:apply && yarn lint:es && yarn test:ci",
		"release": "release-it",
		"release:major": "yarn release-it -- major --ci",
		"release:minor": "yarn release-it -- minor --ci",
		"release:patch": "yarn release-it -- patch --ci",
		"prepare": "husky install"
	},
	"dependencies": {
		"@fontsource/open-sans": "^4.5.14",
		"dayjs": "^1.11.7",
		"i18next": "^22.4.13",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-i18next": "^12.2.0",
		"sass": "^1.59.3",
		"yarn": "^1.22.19"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.5.0",
		"@commitlint/config-conventional": "^17.4.4",
		"@release-it/conventional-changelog": "^5.1.1",
		"@types/node": "^18.15.5",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"@vitejs/plugin-react": "^3.1.0",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-unused-imports": "^3.0.0",
		"husky": "^8.0.0",
		"postcss": "^8.4.31",
		"prettier": "^2.8.6",
		"release-it": "^15.9.3",
		"tailwindcss": "^3.3.3",
		"typescript": "^4.9.3",
		"vite": "^4.2.0",
		"vitest": "^0.29.7"
	}
}
